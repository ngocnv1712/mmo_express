{
  "name": "mmo-express",
  "version": "1.0.0",
  "description": "MMO Express - Browser Fingerprint Management Tool",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:svelte\" \"npm run dev:electron\"",
    "dev:svelte": "vite --port 5173",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:svelte": "vite build",
    "start": "electron ."
  },
  "keywords": ["mmo", "fingerprint", "browser", "automation"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "svelte": "^4.2.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.0",
    "playwright": "^1.40.0",
    "playwright-extra": "^4.3.0",
    "puppeteer-extra-plugin-stealth": "^2.11.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.mmoexpress.app",
    "productName": "MMO Express",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"]
    }
  }
}
